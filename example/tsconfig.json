{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
